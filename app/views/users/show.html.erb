


<div class="container">
 <div class="row">

<div class="col-md-3">
  <%= render 'books/list',user: @user %>
  <%= render 'books/book_new',book: @book %>
</div>

<div class="col-md-8 offset-md-1">

 <p id ="notice"></p>

  <h2>Books</h2>
  <table class="table table-hover table-inverse">
      <thead>
          <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
          </tr>
       </thead>
       <% @users.each do |user| %>
      <tbody>
       <tr>
        <td><%= link_to user_path(@user) do %><%= image_tag user.get_profile_image(100,100) %><% end %></td>
        <td><%= link_to book_path(@user) do %><%= user.title %><% end %></td>
        <td><%= user.body %></td>
       </tr>
      </tbody>
      <% end %>
   </table>
  </div>
 </div>
</div>

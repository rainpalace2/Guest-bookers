 <%= render 'books/list',user: @user %>

 <h2>New book</h2>
   <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  
   <%= f.submit 'Create Book' %>
  <% end %>
  
  <h1>Books</h1>

 <% @books.each do |book| %>
 <%= link_to books_path(book.id) do %>

<% end %>
 <p>Title : <%= book.title %></p>
 <p>Opinion : <%= book.body %></p>

<% end %>

<%= link_to "destroy",books_path(@book),method: :delete %>
 <%= link_to"Edit",edit_book_path(@book.id) %>


  
  
<p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>User info</h1>
    
<div class="form-group col-md-8"> 
  <%= form_with model: @user do |f| %>
 
  <label for = "inputName">Name</label>
 <div class="row-md-2"><%= f.text_field :name,autofocus: true,id:"inputName",placeholder:"Name" %>
 </div>
 
 <div class="form-group">
 <label for = "inputImage">Image</label>
  <div class="row-md-2"> <%= f.file_field :profile_image,placeholder:"Image",accept:"image/*" %>
 </div>
 
 <div class="form-group">
 <label for = "inputIntroduction">Introduction</label>
 <div class="row-md-2"> <%= f.text_area :introduction,placeholder:"Introduction" %>
 </div>
 
 <div class="form-group">
  <div class="row-md-2"> <%= f.submit"Update User",class: "btn btn-secondary" %>
 </div>
 </div>
 </div>
 </div>
<% end %>


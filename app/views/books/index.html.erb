 <p id ="notice"></p>
 <div class="container px-5 px-sm-0">


 <% if @book.errors.any? %>
  <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
  <ul>
    <li>
      <%= @book.errors.full_messages.each do |message| %>
       <%= message %>
      <% end %>
    <% end %>
    </li>
  </ul>
</div>
<div class="container">
  <div class="row">



<div class="col-md-3">
  <%= render 'list',user: @user %>
  <%= render 'book_new',book: @book %>
</div>


<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
      <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
              <td><%= link_to user_path(book) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
              <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
        </tr>
      </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>




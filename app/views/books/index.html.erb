<div class="container">
  <div class="row">
  
    <% if @book.errors.any? %>
     <%= @book.errors.count %>error prohibited this book
      <%= @book.errors.full_messages.each do |message| %>
       <%= message %>
      <% end %>
    <% end %>
  
<div class="col-md-3">
  <%= render 'list',user: @user %>
  <%= render 'book_new',book: @book %>
</div>


<div class="col-md-8 offset-md-1 pt-3">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
      <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <td><%= link_to book_path(@books) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
        </tr>  
      </tbody>
    <% end %>
   </table>

<div>
 <h1>User info</h1>
 <%= image_tag @user.get_profile_image(100,100) %>
 <p>name <%= @user.name %></p>
 <p>introduction <%= @user.introduction %></p>
 <p><%= link_to "編集",edit_user_path(@user) %></p>
</div>

<h2>New book</h2>
   <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>

  <h4>Opinion</h4>
   <%= f.text_area :body %>

   <%= f.submit 'Create Book' %>
  <% end %>